<article>
    <h2>client detection test</h2>
    <h3>your device info:</h3>
    <ul>
        <li><strong>language:</strong> {{ client.language }}</li>
        <li><strong>device type:</strong> {{ client.device_type }}</li>
        <li><strong>css breakpoint:</strong> {{ client.breakpoint }}</li>
        {% if client.screen_width %}
        <li><strong>screen:</strong> {{ client.screen_width }}x{{ client.screen_height }}</li>
        {% endif %}
        {% if client.viewport_width %}
        <li><strong>viewport:</strong> {{ client.viewport_width }}x{{ client.viewport_height }}</li>
        {% endif %}
        {% if client.dpr %}
        <li><strong>pixel ratio:</strong> {{ client.dpr }}</li>
        {% endif %}
    </ul>
    
    <h3>available translations:</h3>
    <ul>
        <li>{{ t["page.title"] }}</li>
        <li>{{ t["page.description"] }}</li>
        <li>{{ t["nav.home"] }}</li>
    </ul>
    
    <p><strong>current year:</strong> {{ current_year }}</p>
</article>
{% endblock %}