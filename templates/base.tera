<!DOCTYPE html>


<html lang="{{ client.lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ t['page.description'] }}">
    <title>{{ t['page.title'] }}</title>
    
    <link rel="stylesheet" href="/static/css/fonts.css">
    <link rel="stylesheet" href="/static/css/base.css">
    <link rel="stylesheet" href="/static/css/{{ client.breakpoint }}.css">
    
    {% block head %}{% endblock %}
</head>
<body>
    {% include "components/loading.tera" %}
    {% include "components/scrollbar.tera" %}
    
    <header role="banner">
        <div class="container">
            <a href="/{{ client.lang }}/" class="logo" aria-label="{{ t['page.home'] }}">vivian voss</a>
            <nav role="navigation" aria-label="{{ t['nav.main'] }}">
                <a href="/{{ client.lang }}/" {% if current_page == 'index' %}aria-current="page"{% endif %}>{{ t["nav.home"] }}</a>
                <a href="/{{ client.lang }}/portfolio" {% if current_page == 'portfolio' %}aria-current="page"{% endif %}>{{ t["nav.portfolio"] }}</a>
                <a href="/{{ client.lang }}/knowledge" {% if current_page == 'knowledge' %}aria-current="page"{% endif %}>{{ t["nav.knowledge"] }}</a>
                <a href="/{{ client.lang }}/impressum" {% if current_page == 'impressum' %}aria-current="page"{% endif %}>{{ t["nav.impressum"] }}</a>
                {% for l in page.languages %}
                    {% if l != client.lang %}
                        {% if current_page == 'index' %}
                            <a href="/{{ l }}/" class="lang-switch" aria-label="{{ t['nav.switch_language'] }}" lang="{{ l }}">{{ l }}</a>
                        {% else %}
                            <a href="/{{ l }}/{{ current_page }}" class="lang-switch" aria-label="{{ t['nav.switch_language'] }}" lang="{{ l }}">{{ l }}</a>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </nav>
        </div>
    </header>
    
    <main>
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </main>
    
    <footer>
        <div class="container">
            <div class="footer-tech">
                <div class="tech-item">
                    <img src="/static/img/logo_freebsd.svg" alt="FreeBSD" />
                    <span>FreeBSD 14.3</span>
                </div>
                <div class="tech-item">
                    <img src="/static/img/logo_nginx.svg" alt="Nginx" />
                    <span>Nginx 1.24</span>
                </div>
                <div class="tech-item">
                    <img src="/static/img/logo_rust.svg" alt="Rust" />
                    <span>Rust 1.80</span>
                </div>
                <div class="tech-item">
                    <img src="/static/img/logo_html5.svg" alt="HTML5" />
                    <span>HTML 5</span>
                </div>
                <div class="tech-item">
                    <img src="/static/img/logo_css3.svg" alt="CSS3" />
                    <span>CSS 3</span>
                </div>
                <div class="tech-item">
                    <img src="/static/img/logo_javascript.svg" alt="JavaScript" />
                    <span>ES6+</span>
                </div>
            </div>
            <div class="footer-copyright">
                <p>
                    &copy; {{ current_year }} vivian burkhard voss &mdash; {{ t["page.copyright"] }}<br>
                    {{ t["page.latest_update"] }}: {{ page.latest_update }}
                </p>
            </div>
            <div class="footer-device">
                <p>
                    language: {{ client.lang }}<br>
                    device: {{ client.device }}<br>
                    viewport: {{ client.screen.width }}x{{ client.screen.height }}<br>
                    pixel ratio: {{ client.screen.pixel_ratio }}
                </p>
            </div>
        </div>
    </footer>
    
    {% block scripts %}{% endblock %}
</body>
</html>